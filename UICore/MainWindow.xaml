<Window x:Class="UICore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UICore" 
        xmlns:viewmodel="clr-namespace:UICore.ViewModel"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="{Binding StatusText}" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Msg}"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto">
            
        </TextBox>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Grid.Row="1">
            <Button Content="User Mode" 
                    Command="{Binding LaunchUserCommand}" 
                    Margin="10" Padding="10"/>

            <Button Content="Admin Mode" 
                    Command="{Binding LaunchAdminCommand}" 
                    Margin="10" Padding="10"/>

            <Button Content="System Mode" 
                    Command="{Binding LaunchAdminCommand}" 
                    Margin="10" Padding="10"/>

            <Button Content="Open Dialog" 
                    Command="{Binding OpenDialogCommand}" 
                    Margin="10" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
